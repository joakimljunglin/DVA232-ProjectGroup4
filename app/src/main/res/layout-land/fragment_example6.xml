<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.example6.example6Fragment" >

    <Button
        android:id="@+id/result_CloseButton"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/close_button"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/resultBackground"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#8D9CF4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/result_ActivityLogo"
        android:layout_width="150dp"
        android:layout_height="104dp"
        android:src="@android:drawable/btn_star_big_on"
        app:layout_constraintBottom_toBottomOf="@+id/resultBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultBackground" />

    <TextView
        android:id="@+id/result_YouScored"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/result_youscored"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/result_ActivityLogo"
        app:layout_constraintTop_toBottomOf="@+id/result_ActivityLogo" />

    <TextView
        android:id="@+id/result_TestScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/resultpercentage_example"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="@+id/result_YouScored"
        app:layout_constraintStart_toStartOf="@+id/result_YouScored"
        app:layout_constraintTop_toBottomOf="@+id/result_YouScored" />

    <TextView
        android:id="@+id/result_TestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_activityname"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/result_YouScored"
        app:layout_constraintStart_toEndOf="@+id/result_ActivityLogo"
        app:layout_constraintTop_toTopOf="@+id/result_YouScored" />
</androidx.constraintlayout.widget.ConstraintLayout>