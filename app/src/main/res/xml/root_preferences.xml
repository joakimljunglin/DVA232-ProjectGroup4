<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Language">
        <ListPreference
            app:defaultValue="@string/english"
            app:entries="@array/pref_language"
            app:entryValues="@array/pref_language"
            android:key="@string/pref_language_key"
            android:title="@string/change_language"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

</PreferenceScreen>