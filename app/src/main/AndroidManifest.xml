<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectdva232v1" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectDva232V1">
        <activity android:name=".ui.HomePage.HomePageClass"
            android:parentActivityName=".ui.HomePage.HomePageClass"
            android:label="Home"/>
        <activity android:name=".ui.Listening.ListeningPage"
            android:parentActivityName=".ui.HomePage.HomePageClass"
            android:label="Listening"/>
        <activity android:name=".ui.Reading.ReadingPage"
            android:parentActivityName=".ui.HomePage.HomePageClass"
            android:label="Reading"/>
        <activity android:name=".ui.Speaking.SpeakingPage"
            android:parentActivityName="ui.HomePage.HomePageClass"
            android:label="Speaking"/>
        <activity android:name=".ui.Vocabulary.VocabularyPage"
            android:parentActivityName="ui.HomePage.HomePageClass"
            android:label="Vocabulary"/>
        <activity android:name=".ui.Writing.WritingPage"
            android:parentActivityName="ui.HomePage.HomePageClass"
            android:label="Writing"/>
        <activity android:name=".ui.learning_activities.ReadingActivity"
            android:parentActivityName="ui.Reading.ReadingPage"
            android:label="@string/reading_test"/>
        <activity android:name=".ui.learning_activities.SpeakingActivity"
            android:parentActivityName=".ui.Speaking.SpeakingPage"
            android:label="@string/speaking_test"/>
        <activity android:name=".ui.learning_activities.VocabularyActivity"
            android:parentActivityName="ui.Vocabulary.VocabularyPage"
            android:label="@string/vocabulary_test"/>
        <activity android:name=".ui.learning_activities.WritingActivity"
            android:parentActivityName=".ui.Writing.WritingPage"
            android:label="@string/writing_test"/>
        <activity android:name=".ui.learning_activities.ListeningActivity"
            android:parentActivityName=".ui.Listening.ListeningPage"
            android:configChanges="keyboardHidden"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:label="@string/listening_test"/>
        <activity android:name=".ui.RegActivity.RegistrationActivity"
            android:parentActivityName=".ui.LoginActivity.LoginActivity"
            android:label="@string/register"/>
        <activity android:name=".ui.LoginActivity.LoginActivity"
            android:parentActivityName=".ui.HomePage.HomePageClass"
            android:label="@string/login"/>

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProjectDva232V1.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ResultActivity.ResultActivity"
            android:parentActivityName="ui.HomePage.HomePageClass"
            android:label="@string/result"/>
    </application>

</manifest>